# Model A: Visit Risk Classification
**Purpose:** Predict if a hospital visit is Low, Medium, or High risk to assist in operational triage.

import pandas as pd
import joblib
import json
from sklearn.preprocessing import LabelEncoder
from sklearn.ensemble import RandomForestClassifier
from sklearn.metrics import classification_report

# 1. Load the modeling dataset
# RENAME the column here to fix the KeyError
df = pd.read_csv('model_table.csv').rename(columns={'patient_visit_count': 'visit_frequency'})

df['visit_date'] = pd.to_datetime(df['visit_date'])
df = df.sort_values('visit_date')

# 2. Feature Justification & Selection
risk_features = [
    'age', 'gender', 'chronic_flag', 'department', 'visit_type', 
    'length_of_stay_hours', 'visit_frequency', 'avg_los_per_patient'
]

X = df[risk_features].copy()
y = df['risk_score']

# 3. Categorical Encoding
le_gender = LabelEncoder()
X['gender'] = le_gender.fit_transform(X['gender'])
X = pd.get_dummies(X, columns=['department', 'visit_type'])

# 4. Time-based Split (80% Train, 20% Test)
split_idx = int(len(X) * 0.8)
X_train, X_test = X.iloc[:split_idx], X.iloc[split_idx:]
y_train, y_test = y.iloc[:split_idx], y.iloc[split_idx:]

# 5. Advanced Model Training: Random Forest
rf_model = RandomForestClassifier(n_estimators=100, random_state=42, class_weight='balanced')
rf_model.fit(X_train, y_train)

# 6. Evaluation
y_pred = rf_model.predict(X_test)
print("Visit Risk Classification Report:")
print(classification_report(y_test, y_pred))

# 7. Save Artifacts for Deployment
joblib.dump(rf_model, 'visit_risk_model.pkl')

# Generate the Feature Schema
schema = {
    "features": list(X.columns),
    "target": "risk_score",
    "model_type": "RandomForestClassifier"
}
with open('feature_schema.json', 'w') as f:
    json.dump(schema, f, indent=4)

print("Success: visit_risk_model.pkl and feature_schema.json saved.")

