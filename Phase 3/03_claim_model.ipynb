# Model B: Claim Outcome Classification
# Purpose:** Predict whether a claim will be Paid, Pending, or Rejected before submission to reduce revenue leakage.

import pandas as pd
import joblib
from sklearn.preprocessing import LabelEncoder
from sklearn.ensemble import RandomForestClassifier
from sklearn.metrics import classification_report
import matplotlib.pyplot as plt

# 1. Load Data
df = pd.read_csv('model_table.csv').sort_values('visit_date')

# 2. Feature Selection (Avoiding Leakage)
claim_features = ['billed_amount', 'insurance_provider', 'provider_rejection_rate', 
                  'department', 'risk_score', 'age', 'chronic_flag']
X = df[claim_features].copy()
y = df['claim_status']

# 3. Encoding
le_risk = LabelEncoder()
X['risk_score'] = le_risk.fit_transform(X['risk_score'])
X = pd.get_dummies(X, columns=['insurance_provider', 'department'])

# 4. Time-based Split
split_idx = int(len(X) * 0.8)
X_train, X_test = X.iloc[:split_idx], X.iloc[split_idx:]
y_train, y_test = y.iloc[:split_idx], y.iloc[split_idx:]

# 5. Train Model with Class Balancing (Imbalance mitigation)
rf_claim_model = RandomForestClassifier(n_estimators=100, class_weight='balanced', random_state=42)
rf_claim_model.fit(X_train, y_train)

# 6. Evaluate
y_pred = rf_claim_model.predict(X_test)
print("Claim Outcome Classification Report:")
print(classification_report(y_test, y_pred))

# Save Artifact
joblib.dump(rf_claim_model, 'claim_outcome_model.pkl')