import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

# Load data
patients = pd.read_csv('patients.csv')
visits = pd.read_csv('visits.csv')
billing = pd.read_csv('billing.csv')

# Convert date columns
patients['registration_date'] = pd.to_datetime(patients['registration_date'])
visits['visit_date'] = pd.to_datetime(visits['visit_date'])
billing['billing_date'] = pd.to_datetime(billing['billing_date'])

# Merge data
# Patients to Visits
df = pd.merge(visits, patients, on='patient_id', how='left')
# Visits to Billing
df = pd.merge(df, billing, on='visit_id', how='left')

# 1. Missing Value Analysis
missing_summary = df[['approved_amount', 'payment_days', 'length_of_stay_hours']].isnull().sum()
missing_percent = (missing_summary / len(df)) * 100

print("Missing Value Analysis:")
print(pd.concat([missing_summary, missing_percent], axis=1, keys=['Total', 'Percentage']))

# 2. Outlier Detection (using IQR)
def detect_outliers_iqr(data, column):
    Q1 = data[column].quantile(0.25)
    Q3 = data[column].quantile(0.75)
    IQR = Q3 - Q1
    lower_bound = Q1 - 1.5 * IQR
    upper_bound = Q3 + 1.5 * IQR
    outliers = data[(data[column] < lower_bound) | (data[column] > upper_bound)]
    return outliers, lower_bound, upper_bound

outlier_cols = ['billed_amount', 'payment_days', 'length_of_stay_hours']
for col in outlier_cols:
    outliers, lb, ub = detect_outliers_iqr(df, col)
    print(f"\nOutliers in {col}: {len(outliers)} rows (Bounds: {lb:.2f} to {ub:.2f})")

# 3. Feature Engineering
# a. Visit frequency per patient
df['patient_visit_count'] = df.groupby('patient_id')['visit_id'].transform('count')

# b. Average length of stay per patient
df['avg_los_per_patient'] = df.groupby('patient_id')['length_of_stay_hours'].transform('mean')

# c. Provider rejection rate
# Calculate rejection rate per provider from the billing/patient data
rejection_rates = df.groupby('insurance_provider')['claim_status'].apply(lambda x: (x == 'Rejected').mean()).reset_index()
rejection_rates.columns = ['insurance_provider', 'provider_rejection_rate']
df = pd.merge(df, rejection_rates, on='insurance_provider', how='left')

# d. Days since registration
df['days_since_registration'] = (df['visit_date'] - df['registration_date']).dt.days

# e. Time-based features
df['visit_month'] = df['visit_date'].dt.month
df['visit_day_of_week'] = df['visit_date'].dt.dayofweek

# Save the modeling dataset
df.to_csv('model_table.csv', index=False)

# Visualizations for Distributions
# Plot 1: Dept Volume
plt.figure(figsize=(10, 6))
sns.countplot(data=df, y='department', order=df['department'].value_counts().index)
plt.title('Visit Distribution by Department')
plt.savefig('dist_dept.png')

# Plot 2: Billing Distribution
plt.figure(figsize=(10, 6))
sns.histplot(df['billed_amount'], kde=True)
plt.title('Billed Amount Distribution')
plt.savefig('dist_billing.png')

# Plot 3: Boxplot for outliers
plt.figure(figsize=(12, 6))
sns.boxplot(data=df[['billed_amount', 'payment_days', 'length_of_stay_hours']])
plt.title('Outlier Analysis (Billed Amount, Payment Days, LoS)')
plt.savefig('outliers_box.png')

print("\nModeling dataset saved to model_table.csv")