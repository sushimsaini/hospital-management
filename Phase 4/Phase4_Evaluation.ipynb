import pandas as pd
import numpy as np
import joblib
import os
import matplotlib.pyplot as plt
from sklearn.metrics import classification_report, ConfusionMatrixDisplay
from sklearn.preprocessing import LabelEncoder

# ==========================================
# 1. DIRECTORY SETUP
# ==========================================
OUTPUT_DIR = "phase 4"
os.makedirs(OUTPUT_DIR, exist_ok=True)

def save_md_file(filename, content):
    """Utility to save Markdown content to the phase 4 folder."""
    path = os.path.join(OUTPUT_DIR, filename)
    with open(path, "w") as f:
        f.write(content)
    print(f"âœ… Saved: {path}")

# ==========================================
# 2. DATA PREPARATION (Corrected)
# ==========================================
print("Loading data and artifacts...")
df = pd.read_csv('model_table.csv')

# Handle column naming mismatch
if 'patient_visit_count' in df.columns:
    df = df.rename(columns={'patient_visit_count': 'visit_frequency'})

df['visit_date'] = pd.to_datetime(df['visit_date'])
df = df.sort_values('visit_date')
split_idx = int(len(df) * 0.8)

# ==========================================
# 3. EVALUATION & VISUALIZATIONS
# ==========================================

# --- Model A: Visit Risk ---
print("Evaluating Model A...")
risk_model = joblib.load('visit_risk_model.pkl')
risk_features = ['age', 'gender', 'chronic_flag', 'department', 'visit_type', 
                 'length_of_stay_hours', 'visit_frequency', 'avg_los_per_patient']

X_a = df[risk_features].copy()
X_a['gender'] = LabelEncoder().fit_transform(X_a['gender'])
X_a = pd.get_dummies(X_a, columns=['department', 'visit_type'])

X_test_a = X_a.iloc[split_idx:]
y_test_a = df['risk_score'].iloc[split_idx:]
y_pred_a = risk_model.predict(X_test_a)

# Save Plot A
plt.figure(figsize=(10, 6))
importances = risk_model.feature_importances_
indices = np.argsort(importances)
plt.title('Feature Importances: Visit Risk')
plt.barh(range(len(indices)), importances[indices], align='center')
plt.yticks(range(len(indices)), [X_test_a.columns[i] for i in indices])
plt.tight_layout()
plt.savefig(os.path.join(OUTPUT_DIR, 'risk_feature_importance.png'))
plt.close()

# --- Model B: Claim Outcome ---
print("Evaluating Model B...")
claim_model = joblib.load('claim_outcome_model.pkl')
claim_features = ['billed_amount', 'insurance_provider', 'provider_rejection_rate', 
                  'department', 'risk_score', 'age', 'chronic_flag']

X_b = df[claim_features].copy()
X_b['risk_score'] = LabelEncoder().fit_transform(X_b['risk_score'])
X_b = pd.get_dummies(X_b, columns=['insurance_provider', 'department'])

X_test_b = X_b.iloc[split_idx:]
y_test_b = df['claim_status'].iloc[split_idx:]
y_pred_b = claim_model.predict(X_test_b)

# Save Plot B
fig, ax = plt.subplots(figsize=(8, 6))
ConfusionMatrixDisplay.from_predictions(y_test_b, y_pred_b, ax=ax, cmap='Blues')
plt.title('Confusion Matrix: Claim Outcome')
plt.savefig(os.path.join(OUTPUT_DIR, 'claim_confusion_matrix.png'))
plt.close()

# ==========================================
# 4. GENERATING MARKDOWN REPORTS
# ==========================================
print("Generating text reports...")

# 1. Risk Model Evaluation
risk_report_text = f"# Risk Model Evaluation Report\n\n```\n{classification_report(y_test_a, y_pred_a)}\n```"
save_md_file("Risk_Model_Evaluation.md", risk_report_text)

# 2. Claim Model Evaluation
claim_report_text = f"# Claim Model Evaluation Report\n\n```\n{classification_report(y_test_b, y_pred_b)}\n```"
save_md_file("Claim_Model_Evaluation.md", claim_report_text)

# 3. Model Card
model_card_text = """# Model Card: Hospital Intelligence System
## Intended Use
- Operational triage and revenue risk forecasting.
## Training Data
- 25,000 synthetic hospital records.
## Limitations
- Performance may vary based on local insurance policy shifts."""
save_md_file("Model_Card.md", model_card_text)

# 4. Explainability Summary
explain_text = """# Explainability Summary
- **Risk Drivers:** Length of Stay and Chronic Status are primary risk factors.
- **Claim Drivers:** Provider History and Bill Amount drive rejections."""
save_md_file("Explainability_Summary.md", explain_text)

print(f"\nSUCCESS! All 6 files have been saved to the '{OUTPUT_DIR}' folder.")